  $field_name = 'confirm_msg';
  // If the field doesn't exist already:
  if (!db_field_exists($tbl_name, $field_name)) {
    // Add it per the schema field definition.
    db_add_field($tbl_name, $field_name, $schema[$tbl_name]['fields'][$field_name]);
  }
